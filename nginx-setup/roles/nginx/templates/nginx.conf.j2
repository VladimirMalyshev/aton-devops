user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 768;
}

http {
    server {
        listen {{ nginx_port }};
        server_name {{ server_name }};

        location / {
            return 200 'Nginx is running on {{ server_name }}!';
            add_header Content-Type text/plain;
        }
    }
}
